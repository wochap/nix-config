profile glegion-undocked {
  output "Samsung Display Corp. 0x4188 Unknown" enable scale 2 position 0,0 mode 2880x1800@120.000999Hz
}

profile glegion-undocked-power-saver {
  output "Samsung Display Corp. 0x4188 Unknown" enable scale 2 position 0,0 mode 2880x1800@60.000999Hz
}

profile glegion-docked {
  output "Samsung Display Corp. 0x4188 Unknown" disable
  output "LG Electronics LG ULTRAGEAR 112NTLEL9832" enable scale 1 position 0,0 mode 3440x1440@143.923Hz adaptive_sync off
  exec kanshi-after-hook
}

profile glegion-docked-both {
  output "Samsung Display Corp. 0x4188 Unknown" enable scale 2 position 0,0
  output "LG Electronics LG ULTRAGEAR 112NTLEL9832" enable scale 1 position 1440,0 mode 3440x1440@143.923Hz adaptive_sync off
  exec kanshi-after-hook
}

profile glegion-stream {
  output "Samsung Display Corp. 0x4188 Unknown" enable scale 2 position 0,0
  output HEADLESS-2 enable scale 2 position 1440,0 mode --custom 2880x1620@120Hz adaptive_sync off
  exec kanshi-after-hook
}

profile glegion-gaming {
  output "Samsung Display Corp. 0x4188 Unknown" enable scale 2 position 0,0
  output HEADLESS-2 enable scale 1 position 1440,0 mode --custom 2880x1800@120Hz adaptive_sync off
  exec kanshi-after-hook
}

